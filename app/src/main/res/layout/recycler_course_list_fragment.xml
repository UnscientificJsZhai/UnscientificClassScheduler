<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/CourseListFragmentRecycler_TitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:singleLine="true"
        android:textSize="26sp"
        android:theme="@style/Theme.TimeManager.Widget.TextView.HeadLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CourseListFragmentRecycler_SubTitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:textSize="22sp"
        android:theme="@style/Theme.TimeManager.Widget.TextView.SubText"
        app:layout_constraintEnd_toEndOf="@+id/CourseListFragmentRecycler_TitleText"
        app:layout_constraintStart_toStartOf="@+id/CourseListFragmentRecycler_TitleText"
        app:layout_constraintTop_toBottomOf="@+id/CourseListFragmentRecycler_TitleText" />

    <TextView
        android:id="@+id/CourseListFragmentRecycler_ClassTimeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CourseListFragmentRecycler_TitleText"
        app:layout_constraintStart_toStartOf="@+id/CourseListFragmentRecycler_TitleText"
        app:layout_constraintTop_toBottomOf="@+id/CourseListFragmentRecycler_SubTitleText" />
</androidx.constraintlayout.widget.ConstraintLayout>