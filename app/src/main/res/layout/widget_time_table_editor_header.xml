<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/TimeTableEditorActivity_HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/activity_TimeTableEditor_HeaderItemTitle"
        android:textSize="24sp"
        android:theme="@style/Theme.TimeManager.Widget.TextView.HeadLine"
        app:layout_constraintBottom_toTopOf="@+id/TimeTableEditorActivity_Subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TimeTableEditorActivity_Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/activity_TimeTableEditor_HeaderSubtitle"
        android:theme="@style/Theme.TimeManager.Widget.TextView.HeadLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/TimeTableEditorActivity_HeaderText"
        app:layout_constraintTop_toBottomOf="@+id/TimeTableEditorActivity_HeaderText" />
</androidx.constraintlayout.widget.ConstraintLayout>